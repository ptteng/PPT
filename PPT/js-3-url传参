                <code>
        var go = document.getElementById('go');
//跳转带参数
function tt() {
    var people={
        name:'张三',
        age:8
    }
    location.href='page2.html';
    localStorage.people=people;
}
//获取参数
function get() {
    location.href='page1.html';
    var people= localStorage.people;
     console.log(people)
}
                </code>
<img src="../img/js-03-url/error3.png">
